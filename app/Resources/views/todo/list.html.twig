{% extends 'base.html.twig' %}

{% block body %}
    <table  class="table table-striped">
        <thead>
        <tr>
            <th>Todo</th>
            <th>Category</th>
            <th>Created At</th>
            <th>Due Date</th>
            <th>Created By</th>
        </tr>
        </thead>

        <tbody>
        {% for todo in todos %}
            <tr>
                <td><a href="{{ path('todo_show', {'slug': todo.slug}) }}">{{ todo.description }}</a></td>
                <td>{{ todo.category }}</td>
                <td>{{ todo.createdAt | date('Y-m-d') }}</td>
                <td>{{ todo.dueDate | date('Y-m-d') }}</td>
                <td>{{ todo.createdBy }}</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}